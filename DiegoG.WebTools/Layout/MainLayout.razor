@using DiegoG.WebTools.Services
@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <InputSelect TValue="string" @bind-Value="CurrentLanguage">
                @foreach(var lang in AvailableLanguages.Languages)
                {
                    <option value="@lang.Key">@lang.Value.LanguageName</option>
                }
            </InputSelect>
            <a href="https://github.com/DiegoG1019" class="nav-link" target="_blank">
                <span class="bi bi-gh-fill-nav-menu" aria-hidden="true"></span> GitHub
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
